<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Define reusable properties -->
    <Properties>
        <Property name="basPath">./logs</Property>
    </Properties>

    <!-- Appenders -->
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
        </Console>

        <!-- Single file output -->
        <File name="File"
              fileName="${basPath}/automation.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %m%n"/>
        </File>
    </Appenders>

    <!-- Loggers -->
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>